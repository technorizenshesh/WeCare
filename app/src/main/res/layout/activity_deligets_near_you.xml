<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlheader" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="5dp" android:src="@drawable/wecare" android:layout_toRightOf="@+id/imgLeftMenu" android:layout_centerVertical="true"/>
            <ImageButton android:id="@+id/imgLeftMenu" android:background="@drawable/back" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/view_one" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_below="@+id/rlheader"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/la_one" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="2" android:layout_below="@+id/view_one">
            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5">
                <TextView android:textColor="@color/my_app_blue" android:id="@+id/txt_one" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Delegation near you" style="@style/Base.TextAppearance.AppCompat.Medium"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5"/>
        </LinearLayout>
        <View android:id="@+id/view_two" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_below="@+id/la_one"/>
        <android.support.v7.widget.RecyclerView android:id="@+id/Rvgiverlist" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginBottom="115dp" android:layout_below="@+id/view_two"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_alignParentBottom="true">
            <Button android:textColor="#fff" android:id="@+id/btn_apply" android:background="@drawable/field_bg" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginBottom="10dp" android:text="AppLied" style="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
