<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rlheader" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="5dp" android:src="@drawable/wecare" android:layout_toRightOf="@+id/imgLeftMenu" android:layout_centerVertical="true"/>
                <ImageButton android:id="@+id/imgLeftMenu" android:background="@drawable/back" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginLeft="20dp" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:id="@+id/view_one" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/rlheader"/>
            <TextView android:textColor="@color/my_app_blue" android:id="@+id/txt_one" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Caregiver activates" android:layout_below="@+id/view_one" style="@style/Base.TextAppearance.AppCompat.Medium"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/txt_one">
                <RelativeLayout android:id="@+id/lay_delegets" android:layout_width="match_parent" android:layout_height="50dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="See Delegations Near You" android:layout_centerVertical="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:src="@drawable/next" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/lay_existingdele" android:layout_width="match_parent" android:layout_height="50dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="See Existing Delegations" android:layout_centerVertical="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:src="@drawable/next" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/lay_profile" android:layout_width="match_parent" android:layout_height="50dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Make Changes to Your Personal Profile" android:layout_centerVertical="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:src="@drawable/next" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/lay_exit" android:layout_width="match_parent" android:layout_height="50dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Exit" android:layout_centerVertical="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:src="@drawable/next" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/lay_logout" android:layout_width="match_parent" android:layout_height="50dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Log Out" android:layout_centerVertical="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:src="@drawable/next" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/lay_help" android:layout_width="match_parent" android:layout_height="50dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Get Help" android:layout_centerVertical="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:src="@drawable/next" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
