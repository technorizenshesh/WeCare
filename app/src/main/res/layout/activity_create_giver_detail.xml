<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rlheader" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="10dp" android:src="@drawable/wecare" android:layout_centerVertical="true"/>
                <ImageButton android:id="@+id/imgLeftMenu" android:background="@drawable/back" android:layout_width="40dp" android:layout_height="30dp" android:layout_marginRight="30dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:textColor="@color/my_app_blue" android:id="@+id/txt_one" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Sign Up to Become a DoCare CareGiver" android:layout_below="@+id/rlheader" style="@style/Base.TextAppearance.AppCompat.Medium"/>
            <View android:id="@+id/view_one" android:background="@color/my_app_blue" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/txt_one"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_below="@+id/view_one">
                <EditText android:id="@+id/edt_username" android:background="@drawable/field" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="7dp" android:hint="Create Username" android:singleLine="true"/>
                <EditText android:id="@+id/edt_pass" android:background="@drawable/field" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="7dp" android:hint="Password" android:singleLine="true" android:inputType="textPassword"/>
                <EditText android:id="@+id/ed_cpass" android:background="@drawable/field" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="7dp" android:hint="Confirm Password" android:singleLine="true" android:inputType="textPassword"/>
                <Spinner android:id="@+id/sp_operation" android:background="@drawable/field" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="7dp"/>
                <TextView android:id="@+id/txt_lang" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
                <Spinner android:id="@+id/sp_language" android:background="@drawable/field" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="7dp"/>
                <Button android:textColor="#fff" android:id="@+id/btn_continue" android:background="@drawable/btn_continue" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="10dp" android:text="Continue" android:textAllCaps="false" style="@style/Base.TextAppearance.AppCompat.Medium"/>
                <TextView android:textStyle="bold" android:textColor="#34a3df" android:gravity="center" android:id="@+id/txt_gethelp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="GET HELP" android:layout_alignParentBottom="true" style="@style/Base.TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
